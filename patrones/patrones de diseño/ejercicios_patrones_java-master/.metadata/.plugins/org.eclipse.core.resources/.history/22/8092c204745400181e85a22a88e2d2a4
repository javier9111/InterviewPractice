package main;

public class Producto implements IObservable {
	
	private int stock;
	
	public Producto(int stock) {
		this.stock = stock;
	}
	
	public void venta() {
		this.setStock(this.stock - 1);
		System.out.println("Producto vendido!");
	}

	public int getStock() {
		return stock;
	}

	public void setStock(int stock) {
		this.stock = stock;
	}
}
